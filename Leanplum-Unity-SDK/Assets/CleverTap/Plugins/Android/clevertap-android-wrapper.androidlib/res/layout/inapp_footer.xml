<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:id="@+id/footer_frame_layout"
    android:layout_gravity="bottom"
    >

    <RelativeLayout
        android:id="@+id/footer_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/footer_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/footer_icon"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp" />
            <LinearLayout
                android:id="@+id/footer_linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/footer_title"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/footer_message"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:maxLines="3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer_linear_layout_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/footer_linear_layout_1"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/footer_button_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/footer_button_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>